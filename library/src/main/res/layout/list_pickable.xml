<?xml version="1.0" encoding="utf-8"?>
<com.github.lykmapipo.picker.StateLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llPickableList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:padding="@dimen/material_baseline_grid_2x">

    <include
        android:id="@+id/v_content"
        layout="@layout/content_pickable" />

    <include
        android:id="@+id/v_empty"
        layout="@layout/state_empty" />

    <include
        android:id="@+id/v_error"
        layout="@layout/state_empty" />

    <include
        android:id="@+id/v_loading"
        layout="@layout/state_loading" />

</com.github.lykmapipo.picker.StateLayout>